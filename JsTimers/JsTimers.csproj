<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version Condition="'$(CI)' == 'True'">1.0.$(APPVEYOR_BUILD_NUMBER)</Version>
    <Version Condition="'$(Version)' == ''">1.0.0</Version>
    <Authors>2CHEVSKII</Authors>
    <Description>JavaScript-like timer API for .NET</Description>
    <Copyright>Copyright (c) 2019-2021 2CHEVSKII</Copyright>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
    <PackageProjectUrl>https://github.com/2chevskii/JsTimers</PackageProjectUrl>
    <RepositoryUrl>https://github.com/2chevskii/JsTimers</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>timers;api;utility</PackageTags>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <AssemblyVersion>$(Version).0</AssemblyVersion>
    <FileVersion>$(Version).0</FileVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG</DefineConstants>
    <GenerateSerializationAssemblies>Off</GenerateSerializationAssemblies>
    <ErrorReport>none</ErrorReport>
    <DebugType>pdbonly</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <GenerateSerializationAssemblies>Off</GenerateSerializationAssemblies>
    <ErrorReport>none</ErrorReport>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../LICENSE">
      <Pack>True</Pack>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
