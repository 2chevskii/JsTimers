{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/build",
  "title": "Build Schema",
  "definitions": {
    "build": {
      "type": "object",
      "properties": {
        "Configuration": {
          "type": "string",
          "enum": [
            "All",
            "Debug",
            "Release"
          ]
        },
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "CopyLibs": {
          "type": "boolean"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "type": "string",
          "description": "Host for execution. Default is 'automatic'",
          "enum": [
            "AppVeyor",
            "AzurePipelines",
            "Bamboo",
            "Bitbucket",
            "Bitrise",
            "GitHubActions",
            "GitLab",
            "Jenkins",
            "Rider",
            "SpaceAutomation",
            "TeamCity",
            "Terminal",
            "TravisCI",
            "VisualStudio",
            "VSCode"
          ]
        },
        "HtmlTestResults": {
          "type": "boolean"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "type": "string",
            "enum": [
              "CleanArtifacts",
              "CleanProjects",
              "Compile",
              "CompileSrc",
              "CompileTests",
              "CopyLibsOutput",
              "Coverage",
              "CoverageCollect",
              "CoverageCreateReport",
              "Docs",
              "DocsClean",
              "DocsCompile",
              "DocsCopy",
              "DocsDev",
              "DocsPreview",
              "DocsRestore",
              "Pack",
              "PatchPackageJsonVersionProps",
              "Restore",
              "Test"
            ]
          }
        },
        "Sln": {
          "type": "string",
          "description": "Path to a solution file that is automatically loaded"
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "type": "string",
            "enum": [
              "CleanArtifacts",
              "CleanProjects",
              "Compile",
              "CompileSrc",
              "CompileTests",
              "CopyLibsOutput",
              "Coverage",
              "CoverageCollect",
              "CoverageCreateReport",
              "Docs",
              "DocsClean",
              "DocsCompile",
              "DocsCopy",
              "DocsDev",
              "DocsPreview",
              "DocsRestore",
              "Pack",
              "PatchPackageJsonVersionProps",
              "Restore",
              "Test"
            ]
          }
        },
        "Verbosity": {
          "type": "string",
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "enum": [
            "Minimal",
            "Normal",
            "Quiet",
            "Verbose"
          ]
        }
      }
    }
  }
}
